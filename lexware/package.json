{
  "name": "n8n-nodes-lexware",
  "version": "0.1.0",
  "description": "Custom n8n node for integrating with Lexware API",
  "license": "MIT",
  "homepage": "https://github.com/jroehl/n8n-nodes-lexware",
  "repository": {
    "type": "git",
    "url": "https://github.com/jroehl/n8n-nodes-lexware.git"
  },
  "bugs": {
    "url": "https://github.com/jroehl/n8n-nodes-lexware/issues"
  },
  "keywords": [
    "n8n",
    "n8n-node",
    "lexware",
    "accounting",
    "invoicing",
    "api"
  ],
  "author": "jroehl",
  "main": "dist/nodes/Lexware.node.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "pack": "npm run build && npm pack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"No linter configured\"",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "lexware.png"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/LexwareApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Lexware.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "n8n-workflow": "^1.110.0",
    "typescript": "^5.9.2"
