{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}